<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <title>Travel Way</title>
    <link href="/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body id="Background">
    <img src="~/Content/images/logo.png" id="logo"/>
    <div id="Image">
        <form action="" method="GET" id="Form-getting-direction">
            <fieldset id="Getting-direction" >
                <label for="OutCity">Введите город отбытия:</label>
                <input type="text" name="OutCity" id="OutCity" placeholder="Астана" />
                <hr color="white" />
                <label for="InCity">Введите город прибытия:</label>
                <input type="text" name="InCity" id="InCity" placeholder="Алматы" />
                <hr color="white" />
                <input type="button" name="Button" id="Button" value="Найти" />            
            </fieldset>

        </form>
    </div>

    @RenderBody()


    <footer id="Footer">
        <table>
           @for (int i = 0; i < 2; i++)
           {
            <tr>
                <td><h3>Some info</h3></td>
            </tr>
           }
        </table>
    </footer>

</body>
</html>

