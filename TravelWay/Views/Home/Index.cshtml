            <header>
                <div id="Image">
                    <img src="~/Content/images/logo.png" id="logo" />
                    <form action="/Home/Routes/" method="post" id="Form-getting-direction">
                        <fieldset id="Getting-direction">
                            <label for="From">Введите город отбытия:</label>
                            <input type="text" name="From" id="OutCity" placeholder="Нур-Султан" />
                            <hr color="white" />
                            <label for="To">Введите город прибытия:</label>
                            <input type="text" name="To" id="InCity" placeholder="Алматы" />
                            <hr color="white" />
