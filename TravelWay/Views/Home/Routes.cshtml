@{
    ViewBag.Title = "Routes";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Travel Way</title>
    <link rel="shortcut icon" href="~/Content/images/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/Routes.css" />
</head>
<body>
    <header id="routes-header">
        <a href="/Home/Index"><img src="~/Content/images/logo.png" id="logo-routes" /></a>
        <fieldset id="routes-fieldset">
            <label><b><a href="/Home/Index">На главную. ||</a></b> Город отправления: <b>@ViewBag.SearcherOriginal.From</b> || Город прибытия: <b>@ViewBag.SearcherOriginal.To</b></label>
            <br />
            <label>Дата отправки: <b>@ViewBag.SearcherOriginal.DepartureDate.Date</b></label>
        </fieldset>
    </header>
    <div style="height:100px;"></div>
    <content>

        <br />
        @if (!ViewBag.isFound)
        {
            <h3>Маршруты по Вашему запросу не найдены!</h3>
            // 
            for (int i = 0; i < 30; i++)
            {
                <br />
            }
        }
        else
        {
            // cost URL StartTime  AirCompany 
            foreach (var ticket in ViewBag.Tickets)
            {
                <div class="WayInfo">
                    <p> Из @ViewBag.SearcherOriginal.From В @ViewBag.SearcherOriginal.To 
                           @ViewBag.Tickets.Cost @ViewBag.Tickets.AirCompany 
                           @ViewBag.Tickets.StartTime <a href="@ViewBag.Tickets.Url">источник</a>></p>
                </div>    
            }
            
        }



    </content>
   
    <footer id="Footer" style="background-color: #0E0E0E; z-index:0;">
        <img src="~/Content/images/logo.png" id="footer-logo" alt="" />
        <p id="footer-text-logo" style="color:white; font-style:normal;">TravelWay corporation. All rights reserved</p>
    </footer>
</body>
</html>